PARTE MAIS PROVAVEL DE ESTAR CERTA:
<?php
if (($_REQUEST["favoritos"] ?? '') == "lista") {
    $n = 1; // Definindo o valor inicial de $n
    while ($n <= $qtd) {
        if (isset($_COOKIE["imovel$n"])) {
            // A variável $imovelFavorito deve vir do cookie correto
            $imovelFavorito = $_COOKIE["imovel$n"]; // Alterei para imovel$n, pois "produto$n" parecia um erro

            // Protegendo a consulta SQL para evitar SQL Injection
            $sql = "SELECT * FROM imovel WHERE id = ?";
            $stmt = $conn->prepare($sql);
            $stmt->bind_param("i", $imovelFavorito); // Usando bind_param para proteger contra SQL Injection
            $stmt->execute();
            $res = $stmt->get_result();
            $row = $res->fetch_object();

            // Exibindo o imóvel favorito
            echo "<div id='imovel'>";
            echo "<div id='imovelNome'>" . htmlspecialchars($row->nome) . "</div>"; // Exibindo o nome do imóvel com segurança
            echo "<div id='imovelImagem'><img src='" . htmlspecialchars($row->imagem_url) . "' alt='Imagem do imóvel'></div>";
            echo "</div>";

            // Se necessário adicionar um script, deve-se fazer de forma clara
            echo "<script>
                document.getElementById('imovel').onclick = function() {
                    window.location.href = 'index.php';
                };
            </script>";
        }
        $n++;
    }
}
?>

FAVORITOS

<?php
// Verifica se o ID do imóvel foi enviado via POST
if (isset($_POST['id'])) {
    $idImovel = $_POST['id']; // Recebe o ID do imóvel

    // Se o ID do imóvel não estiver vazio, registramos o favorito
    if ($idImovel) {
        $imovelCookie = "imovel$idImovel"; // Nome do cookie baseado no ID do imóvel

        // Verifica se o imóvel já foi adicionado aos favoritos
        if (!isset($_COOKIE[$imovelCookie])) {
            // Definindo o cookie para esse imóvel, que expira em 30 dias
            setcookie($imovelCookie, $idImovel, time() + (30 * 24 * 60 * 60), "/");

            echo "Imóvel $idImovel foi adicionado aos favoritos!";
            $lista+= $idImovel;
        } else {
            echo "Este imóvel já está nos seus favoritos.";
        }

        
        if(isset($lista)){
            echo 'Sua lista de favoritos:'.$idImovel;
        }
        if(!isset($lista)){
            echo 'Você não possui lista de favoritos.';
        }


    } else {
        echo "ID do imóvel inválido.";
    }
} else {
    echo "Nenhum ID de imóvel recebido.";
}




?>

